<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/bg_col">
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"></RelativeLayout>
    <LinearLayout
        android:layout_width="1800px"
        android:layout_height="1058px"
        android:orientation="horizontal"
        android:background="@drawable/bg_item_col">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            >

            <Button
                android:id="@+id/btn_left2598"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="71dp"
                android:layout_marginBottom="109dp"
                android:background="@drawable/btn_left" />

            <Button
                android:id="@+id/btn_right2598"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_alignBottom="@+id/btn_left2598"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/btn_left2598"
                android:background="@drawable/btn_right" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            >

            <Button
                android:id="@+id/button3"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="150dp"
                android:background="@drawable/btn_on"
                  />

            <Button
                android:id="@+id/button4"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_below="@+id/button3"
                android:layout_marginTop="27dp"
                android:layout_marginEnd="15dp"
                android:layout_toStartOf="@+id/btn_more2598"
                android:background="@drawable/btn_select" />

            <Button
                android:id="@+id/btn_more2598"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/button4"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/btn_start" />

            <Button
                android:id="@+id/button7"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/pic_top_ball"
                android:text=" " />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_weight="1">


            <SeekBar
                android:id="@+id/seekBar3"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="-18dp"
                android:layout_marginTop="188dp"
                android:progress="50"
                android:rotation="90"
                android:thumb="@drawable/icon_ball_r" />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"></RelativeLayout>
</LinearLayout>
